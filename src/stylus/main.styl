*
    padding 0
    margin 0
body
    background: linear-gradient(to bottom, rgba(35,31,32,1) 0%, rgba(35,31,32,1) 10%,  rgba(88,78,81,1) 100%);
    width 100%
    height 100vh
    box-sizing border-box
    font-family roboto

header
    width 100%
    text-align center
    img
        margin-top 10vh
        max-width 200px

section
    width 100%
    max-width 1024px
    margin auto
    margin-top 10vh
    h1
        color #808080
        font-weight 100
    hr
        border 1px solid #808080
        

.menu
    width 100%
    margin auto
    display flex
    justify-content space-around
    flex-wrap wrap
    &__item
        width 33.3%
        margin-top 4em
        a
            text-align center
            text-decoration none
            color #808080
            display flex
            flex-direction column
            justify-content flex-end
            align-items center
            img
                max-width 100%
                margin auto
            
            p
                margin-top .5em
                font-size 24px
                font-weight 100
        
        &:hover
            a
                color #fff
            img
                animation-name saltar
                animation-duration .5s

@keyframes saltar
    0%{
        transform scale(1.1)
    }
    50%{
        transform scale(.9)
    }
    100%{
        transform scale(1)
    }